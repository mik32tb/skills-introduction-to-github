# YouTube Automation Configuration Template

# Copy this file to .env in your n8n directory and fill in your values

# ============================================
# n8n Server Configuration
# ============================================
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_EDITOR_BASE_URL=http://localhost:5678

# ============================================
# Video Production Settings
# ============================================

# Target video length (in minutes)
VIDEO_LENGTH_MIN=10
VIDEO_LENGTH_MAX=12

# Storage paths (use absolute paths)
VIDEO_DIRECTORY=/home/user/youtube-videos/output
TEMP_DIRECTORY=/home/user/youtube-videos/temp
ARCHIVE_DIRECTORY=/home/user/youtube-videos/archive

# Video quality settings
VIDEO_RESOLUTION=1920x1080
VIDEO_FRAMERATE=30
VIDEO_BITRATE=8M
AUDIO_BITRATE=128k

# ============================================
# Upload Schedule (5 times per week)
# ============================================

# Cron format: minute hour day month weekday
# Current: 9 AM Monday, Tuesday, Thursday, Friday, Saturday
UPLOAD_SCHEDULE=0 9 * * 1,2,4,5,6

# Timezone for scheduling
TIMEZONE=America/New_York

# ============================================
# Content Discovery Settings
# ============================================

# Your channel niche (be specific)
VIDEO_NICHE=technology tutorials
# Examples:
# - "productivity tips and life hacks"
# - "cooking recipes for beginners"
# - "personal finance advice"
# - "gaming tutorials and reviews"
# - "fitness and wellness"

# Target audience description
TARGET_AUDIENCE=US viewers aged 18-45 interested in technology

# Content topics (comma-separated keywords)
CONTENT_KEYWORDS=automation,productivity,tech,tutorials,how-to

# Geographic targeting
TARGET_COUNTRY=US
SECONDARY_COUNTRIES=CA,UK,AU

# ============================================
# AI API Keys (Script Generation)
# ============================================

# Google Gemini API (Free tier: 60 requests/min)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Alternative: OpenAI API (if you have credits)
# OPENAI_API_KEY=your_openai_key_here
# OPENAI_MODEL=gpt-3.5-turbo

# Alternative: Hugging Face (Free)
# HUGGINGFACE_API_KEY=your_hf_key_here
# HUGGINGFACE_MODEL=gpt2-large

# ============================================
# Voiceover Settings (Natural Human-Like)
# ============================================

# Primary voiceover provider
VOICEOVER_PROVIDER=edge_tts
# Options: edge_tts (free, no billing), elevenlabs, google_tts (requires billing), azure_tts (requires billing)

# Edge TTS Settings (FREE - No API Key or Billing Required)
EDGE_TTS_VOICE=en-US-GuyNeural
# Voice options (all free):
# Male: en-US-GuyNeural, en-US-DavisNeural, en-US-JasonNeural, en-US-TonyNeural
# Female: en-US-JennyNeural, en-US-AriaNeural, en-US-SaraNeural, en-US-NancyNeural

# ElevenLabs Settings (Most Natural - Free: 10k chars/month)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# Voice IDs:
# Rachel (US Female): 21m00Tcm4TlvDq8ikWAM
# Adam (US Male): pNInz6obpgDQGcFmaJgB
# Antoni (US Male, Young): ErXwobaYiN019PkySvjV
# Bella (US Female, Young): EXAVITQu4vr4xnSDxMaL

ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.5
ELEVENLABS_SPEAKER_BOOST=true

# Google Cloud TTS Settings (Requires Billing Account - Free: 1M chars/month)
# ⚠️ Note: Google Cloud requires credit card even for free tier
GOOGLE_TTS_API_KEY=your_google_api_key_here
GOOGLE_TTS_VOICE=en-US-Neural2-J
# Voice options:
# en-US-Neural2-J (Male, Professional)
# en-US-Neural2-D (Male, Conversational)
# en-US-Neural2-C (Female, Warm)
# en-US-Neural2-F (Female, Youthful)

GOOGLE_TTS_SPEAKING_RATE=1.0
GOOGLE_TTS_PITCH=0
GOOGLE_TTS_VOLUME_GAIN=0

# Voice characteristics
VOICE_GENDER=female
VOICE_AGE_RANGE=25-35
VOICE_STYLE=conversational and friendly

# Speaking rate (words per minute)
SPEAKING_RATE=155
# Adjust based on content:
# - 140-150: Educational, complex topics
# - 150-160: Standard content
# - 160-170: Entertainment, energetic

# ============================================
# Stock Footage & Images
# ============================================

# Pexels API (Free - 200 requests/hour)
PEXELS_API_KEY=your_pexels_api_key_here

# Unsplash API (Alternative - 50 requests/hour free)
# UNSPLASH_API_KEY=your_unsplash_key_here

# Number of clips to use per video
CLIPS_PER_VIDEO=10
CLIP_MIN_DURATION=15
CLIP_MAX_DURATION=45

# ============================================
# YouTube API Configuration
# ============================================

# YouTube Data API v3
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:5678/rest/oauth2-credential/callback

# Default upload settings
YOUTUBE_PRIVACY_STATUS=public
# Options: public, unlisted, private

YOUTUBE_CATEGORY=22
# Common categories:
# 22: People & Blogs
# 28: Science & Technology
# 26: Howto & Style
# 24: Entertainment
# 27: Education

YOUTUBE_DEFAULT_LANGUAGE=en-US

# ============================================
# SEO Optimization Settings
# ============================================

# Primary keyword targeting
SEO_PRIMARY_KEYWORD=your main keyword
SEO_SECONDARY_KEYWORDS=keyword1,keyword2,keyword3

# Title preferences
TITLE_MAX_LENGTH=60
TITLE_INCLUDE_YEAR=true
TITLE_INCLUDE_NUMBERS=true

# Description template style
DESCRIPTION_STYLE=detailed
# Options: detailed, concise, storytelling

# Default tags (added to all videos)
DEFAULT_TAGS=2024,tutorial,howto,guide

# Hashtag settings
MAX_HASHTAGS=5
HASHTAG_STYLE=trending
# Options: trending, niche-specific, branded

# ============================================
# Thumbnail Generation
# ============================================

# Thumbnail source
THUMBNAIL_SOURCE=unsplash
# Options: unsplash, pexels, generated

# Thumbnail text settings
THUMBNAIL_FONT=DejaVuSans-Bold
THUMBNAIL_FONT_SIZE=80
THUMBNAIL_TEXT_COLOR=white
THUMBNAIL_OUTLINE_COLOR=black
THUMBNAIL_BACKGROUND_OVERLAY=dark
# Options: dark, light, gradient

# ============================================
# Background Music
# ============================================

# Music library source
MUSIC_SOURCE=youtube_audio_library
# Options: youtube_audio_library, incompetech, local

# Local music directory (if using local files)
MUSIC_DIRECTORY=/home/user/youtube-videos/music

# Music volume (0-100, recommended: 12-18)
MUSIC_VOLUME=15

# Music genre preference
MUSIC_GENRE=corporate
# Options: corporate, upbeat, cinematic, electronic, acoustic

# ============================================
# Analytics & Monitoring
# ============================================

# Enable notifications
ENABLE_NOTIFICATIONS=true

# Notification method
NOTIFICATION_METHOD=email
# Options: email, slack, discord, webhook

# Email settings (for notifications)
NOTIFICATION_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack webhook (if using Slack)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook (if using Discord)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ============================================
# Error Handling & Retry Logic
# ============================================

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Delay between retries (in seconds)
RETRY_DELAY=300

# Enable automatic error notifications
ERROR_NOTIFICATIONS=true

# ============================================
# Advanced Settings
# ============================================

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Cleanup temporary files after upload
AUTO_CLEANUP=true

# Archive uploaded videos
ARCHIVE_VIDEOS=true

# Maximum disk space usage (in GB)
MAX_DISK_USAGE=50

# Video generation timeout (in minutes)
GENERATION_TIMEOUT=30

# Upload timeout (in minutes)
UPLOAD_TIMEOUT=45

# ============================================
# Content Filters & Safety
# ============================================

# Content safety level
CONTENT_SAFETY=moderate
# Options: strict, moderate, permissive

# Blocked keywords (comma-separated)
BLOCKED_KEYWORDS=

# Required keywords (at least one must be present)
REQUIRED_KEYWORDS=

# Enable profanity filter
PROFANITY_FILTER=true

# ============================================
# Performance Optimization
# ============================================

# Number of parallel downloads
PARALLEL_DOWNLOADS=3

# Enable video compression
ENABLE_COMPRESSION=true

# Compression quality (1-51, lower is better quality)
COMPRESSION_CRF=23

# Use hardware acceleration (if available)
HARDWARE_ACCELERATION=false

# FFmpeg preset
FFMPEG_PRESET=medium
# Options: ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow

# ============================================
# Backup & Recovery
# ============================================

# Enable automatic backups
AUTO_BACKUP=true

# Backup directory
BACKUP_DIRECTORY=/home/user/youtube-videos/backups

# Backup frequency (in days)
BACKUP_FREQUENCY=7

# Keep last N backups
BACKUP_RETENTION=4

# ============================================
# End of Configuration
# ============================================

# Notes:
# - Replace all "your_*_here" values with actual credentials
# - Use absolute paths for all directory settings
# - Ensure all directories exist before running
# - Keep this file secure and never commit to public repositories
# - Restart n8n after changing environment variables
